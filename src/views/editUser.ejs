      <!--  form det -->
      <form style="margin: 10px; padding: 10px;" action="/edit/<%= user.id %>" method="POST" onsubmit="return confirmUpdate()">
        <h1>Edit User</h1>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" name="email" value="<%= user.email %>" >
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Name</label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="name" value="<%= user.name %>" >
        </div>
        <div class="form-group">
          <label for="exampleInputPassword2">City</label>
          <input type="text" class="form-control" id="exampleInputPassword2" name="city" value="<%= user.city %>" >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <script>
        function confirmUpdate() {
          return confirm("Are you sure you want to update this user?");
        }
      </script>
